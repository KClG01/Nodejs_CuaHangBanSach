<table class="table">
  <thead>
    <tr>
      <th scope="col">STT</th>
      <th scope="col">Email</th>
      <th scope="col">Ngày đăng ký</th>
    </tr>
  </thead>
  <tbody>
    <% if (data.lst.length===0) { %>
      <tr>
        <td colspan="3">Không có dữ liệu</td>
      </tr>
      <% } else { %>
        <% data.lst.forEach((item, index)=> { %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= item.email %>
            </td>
            <td>
              <%= new Date(item.created_at).toLocaleDateString('vi-VN') %>
            </td>
          </tr>
          <% }) %>
            <% } %>
  </tbody>
</table>