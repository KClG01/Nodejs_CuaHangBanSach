<div class="nav justify-content-end" style="margin: 20px 20px 0 0; ">
  <form method="post">
    <input type="text" name="name_categories" placeholder="Categories">
    <button type="submit" class="btn btn-primary">Thêm Danh Mục</button>
  </form>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ten danh muc </th>
      <th scope="col">Thời gian</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
    <tbody class="table-group-divider">
      <%data.lst.forEach((item)=>{%>
        <tr>
            <%for(let key in item){%>
              <% if(key != "content"){%>
                <td><%=item[key]%></td>
                <%}%>
            <%}%>    
            <td><a href="/categories/del/<%=item.id%>" class="btn btn-danger"><i class="fa fa-trash">Xóa </i></a></td>
            <td><a href="/categories/edit/<%=item.id%>" class="btn btn-warning"><i class="bi bi-0-square">Cập nhật</i></a></td>            
        </tr>
    <%})%>
    </tbody>
</table>
